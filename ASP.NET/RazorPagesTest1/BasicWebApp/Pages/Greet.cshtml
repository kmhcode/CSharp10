@page "{person=Visitor}"
@inject BasicWebApp.ICounterService counter
@{
	var id = (string)ViewContext.RouteData.Values["person"]!;
}
@addTagHelper *, BasicWebApp
<!DOCTYPE html>
<html>
	<head>
		<title>BasicWebApp</title>
	</head>
	<body>
		<h1>Welcome @id</h1>
		<b>Number of Greetings: </b>@counter!.CountNext(id)
		<p>
			<b>Current Time: </b><span time-display-format="HH:mm:ss"></span>
		</p>
	</body>
</html>

